{
  "expo": {
    "name": "Ice Delivery Partner",
    "slug": "ice-delivery-partner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.jpg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.icedelivery.partner",
      "infoPlist": {
        "UIBackgroundModes": ["location"],
        "NSLocationWhenInUseUsageDescription": "We need your location to track deliveries",
        "NSLocationAlwaysUsageDescription": "We need your location to track deliveries in the background"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.jpg",
        "backgroundColor": "#1e40af"
      },
      "package": "com.icedelivery.partner",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Ice Delivery to use your location for tracking deliveries.",
          "locationWhenInUsePermission": "Allow Ice Delivery to use your location for tracking deliveries."
        }
      ]
    ],
    "scheme": "icedelivery"
  }
}
